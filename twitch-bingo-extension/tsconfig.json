{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "ES2020",
        "moduleResolution": "Node",
        "target": "ES6",
        "jsx": "react",
        "allowJs": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "diagnostics": true,
        "extendedDiagnostics": true
    }
}